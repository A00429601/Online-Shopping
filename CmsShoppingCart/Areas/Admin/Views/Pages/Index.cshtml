@model IEnumerable<CmsShoppingCart.Models.ViewModels.Pages.PageVM>
@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
@{
    ViewBag.Title = "Pages";
}
<h2>Index</h2>
<p>
    @Html.ActionLink("Create New Page", "CreatePage")
</p>
@if (!Model.Any())
{
    <h1>No pages to display</h1>
}
else
{
    <table class="table">
        <tr>
            <th>
                Title
            </th>
            <th>
                Slug
            </th>
            <th>
                Sidebar
            </th>
            <th></th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Slug)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Body)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Sorting)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.HasSidebar)
                </td>
                <td>
                    @Html.ActionLink("Edit", "EditPage", new { id = item.Id }) |
                    @Html.ActionLink("Details", "PageDetails", new { id = item.Id }) |
                    @if (item.Slug != "home")
                    {
                        @Html.ActionLink("Delete", "DeletePage", new { id = item.Id }, new { @class = "delete" })

                    }
                </td>
            </tr>
        }

    </table>
}
@section Scripts{
    <script src="http://code.jquery.com/ui/1.12.0/jquery-ui.min.js"></script>
    $(function(){
    $("a.delete").click(function () {
    if (!confirm("Confirm page delete")) return false;

    });


    $("table#pages tbody").sortable({
    items: "tr:not(.home)";
    placeholder: "ui-state-highlight",
    update_function () {
    var ids = $("table#pages tbody").sortable("serialize");
    var url = "/Admin/Pages/ReorderPages";

    $.post(url, ids, function (data) {});
    }
    });
    })